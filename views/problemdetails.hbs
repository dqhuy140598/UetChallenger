                              <div class="row">
                                 <div class="col-xs-7">
                                    <span class="text-info" class="tags">{{problem.category.name}}</span>
                                    <h5 class="lead text-success" style="font-size:36px;">{{problem.name}}</h5>
                                 
                                    <!-- List Details -->
                                    <ul class="bullet-round-list">
                                       <li>{{problem.description}}</li>
                                       <li>Đầu Vào: {{problem.input}}</li>
                                       <li>Đầu Ra: {{problem.output}}</li>
                                    </ul>
                                    <div class="row">
                                      <div class="col-md-4">
                                      <table class="table table-bordered">
                                          <thead>
                                              <th class="lead">Đầu Vào</th>
                                              <th class="lead">Đầu Ra</th>
                                          </thead>
                                          <tbody>
                                              <tr>
                                                  <td>{{{problem.inexample}}}</td>
                                                  <td>{{{problem.outexample}}}</td>
                                              </tr>
                                          </tbody>
                                      </table>
                                      </div>
                                    </div>  
                                 </div>
                                 <div class="col-xs-5">
                                   {{#if message.success}}
                                      <div class="alert alert-success" role="alert">
                                        {{message.success}}
                                      </div>
                                    {{/if}}
                                     {{#if message.apath}}
                                      <div class="alert alert-warning" role="alert">
                                        {{message.apath}}
                                      </div>
                                    {{/if}}
                                     {{#if message.fail}}
                                      <div class="alert alert-dark" role="alert">
                                        {{message.fail}}
                                      </div>
                                    {{/if}}
                                     {{#if message.error}}
                                      <div class="alert alert-danger" role="alert">
                                        {{message.error}}
                                      </div>
                                    {{/if}}
                                 </div>
                              </div>
                           </div>
                        </div>
                          <div class="row" style="position:relative">
                            <form action="/problems/{{problem._id}}" method="POST" id="myform">
                                <div class="form-group col-md-3">
                                        <label for="sel1">Chọn Ngôn Ngữ</label>
                                        <select class="form-control" id="sel1" name="language">
                                          <option value="cpp">C++14</option>
                                          <option value="java">Java</option>
                                        </select>
                                </div>
                                <input type="hidden" name="sourcecode" style="display: none;" id="hidden">
                                <div id="editor">
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-success" name="submit" value="Nộp Bài" id="submit">
                                </div>
                            </form>
                        </div>
                     </div>
